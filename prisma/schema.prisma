generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Chats {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  chatId   String
  userId   String
  messages Json[]
  chatName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  important Boolean @default(false)

  @@unique([chatId, userId])
}

model Accounts {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  email   String
  picture String?
  password String
  createdAt DateTime @default(now())
}